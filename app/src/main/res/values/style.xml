<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="ProfileItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#5C5C5C</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProfileItemRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">#5C5C5C</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableEnd">@drawable/baseline_chevron_right_24</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#EAEAEA</item>
    </style>
    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!-- Row container: icon + text + arrow -->
    <style name="ProfileRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="ProfileRowIcon">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:tint">#3FA186</item>
    </style>

    <style name="ProfileRowText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">#5C5C5C</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProfileRowArrow">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:tint">#B0B0B0</item>
    </style>

    <style name="SimpleRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="SimpleRowIcon">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:tint">#3FA186</item>
    </style>

    <style name="SimpleRowText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">#5C5C5C</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>