<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F6F7F8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Back (boxed) -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_icon_box"
        android:src="@drawable/cheveon_left"
        android:contentDescription="Back"
        app:tint="#3FA186" />

    <!-- Edit (boxed) -->
    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="30dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:background="@drawable/bg_icon_box"
        android:src="@drawable/editpr"
        android:scaleType="centerInside"
        android:contentDescription="Edit"
        app:tint="#3FA186" />

    <!-- Bottom pill container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomPill"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="22dp"
        android:padding="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="#E4E4E4">


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            app:elevation="0dp"
            app:itemActiveIndicatorStyle="@null"
            app:menu="@menu/bottom_nav"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@color/bnav_colors"
            app:itemTextColor="@color/bnav_colors"
            app:itemRippleColor="@android:color/transparent"
            app:itemBackground="@android:color/transparent" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Scroll content -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_below="@id/btnBack"
        android:layout_above="@id/bottomPill"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Avatar circle + border -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatar"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/image1"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircleImage"
                app:strokeColor="#D6D6D6"
                app:strokeWidth="2dp" />

            <TextView
                android:layout_marginTop="14dp"
                android:text="Johan Smith"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="California, USA"
                android:textSize="14sp"
                android:textColor="#7A7A7A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Green card (rounded + shadow) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="18dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#3FA186">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:text="Balance"
                            android:textColor="#E7FFF6"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="00.00"
                            android:textColor="#E7FFF6"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#66FFFFFF" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:text="Orders"
                            android:textColor="#E7FFF6"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="10"
                            android:textColor="#E7FFF6"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#66FFFFFF" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:text="Total Spent"
                            android:textColor="#E7FFF6"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="000.0"
                            android:textColor="#E7FFF6"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Simple list with icons -->
            <LinearLayout
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/SimpleRow">
                    <ImageView style="@style/SimpleRowIcon" android:src="@drawable/person"/>
                    <TextView style="@style/SimpleRowText" android:text="Personal Information"/>
                </LinearLayout>

                <LinearLayout style="@style/SimpleRow">
                    <ImageView style="@style/SimpleRowIcon" android:src="@drawable/cart"/>
                    <TextView style="@style/SimpleRowText" android:text="Your Order"/>
                </LinearLayout>

                <LinearLayout style="@style/SimpleRow">
                    <ImageView style="@style/SimpleRowIcon" android:src="@drawable/heart"/>
                    <TextView style="@style/SimpleRowText" android:text="Your Favourites"/>
                </LinearLayout>

                <LinearLayout style="@style/SimpleRow">
                    <ImageView style="@style/SimpleRowIcon" android:src="@drawable/payment"/>
                    <TextView style="@style/SimpleRowText" android:text="Payment"/>
                </LinearLayout>

                <LinearLayout style="@style/SimpleRow">
                    <ImageView style="@style/SimpleRowIcon" android:src="@drawable/trusted"/>
                    <TextView style="@style/SimpleRowText" android:text="Recommended Shops"/>
                </LinearLayout>

                <LinearLayout style="@style/SimpleRow">
                    <ImageView style="@style/SimpleRowIcon" android:src="@drawable/location"/>
                    <TextView style="@style/SimpleRowText" android:text="Nearest Shop"/>
                </LinearLayout>

                <LinearLayout style="@style/SimpleRow">
                    <ImageView style="@style/SimpleRowIcon" android:src="@drawable/logout"/>
                    <TextView style="@style/SimpleRowText" android:text="Logout"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="22dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
